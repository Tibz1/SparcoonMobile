<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sparcoon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <!-- Créer composant texte par défaut-->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sen</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Créer composant App name-->
    <style name="AppNameTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/senbold</item>
    </style>

    <!-- Créer composant texte bottom NavBar-->
    <style name="BottomNavbarTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Créer composant Titre Niveau 1 -->
    <style name="Titre1TextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/senbold</item>
    </style>

    <!-- Créer composant Titre Niveau 2 -->
    <style name="Titre2TextStyle" parent="Titre1TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- Créer un style pour la bottom navigation view -->
    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/sen</item>
    </style>

</resources>